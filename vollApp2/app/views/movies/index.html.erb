<p id="notice"><%= notice %></p>

<h1 class="h1-list">Listing Movies</h1>

<div class="container">
  <% @movies.each do |movie| %>
    <div class="main-container row clearfix">
      <h3 class="card-h3"><%= movie.name %></h3>
      
      <div class="col-3">
        <%= image_tag movie.picture(:thumb), class: "img-thumbnail"%>
      </div>
      
      
      <div class="main-desc col-3">
        Classificação: <h4><%= movie.category.name%></h4>
        <p class="main-desc-p"><%= truncate(movie.description, length: 140)%> </p>
      </div>
      
      
      <div class="col-3 col-3-3">
        <%= link_to 'Show', movie, class: "col-3-btn" %>
        <%= link_to 'Edit', edit_movie_path(movie), class: "col-3-btn" %>
        <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "col-3-btn" %>
      </div>
    </div>
  <% end %>
  <div class="paginate">
    <p><%= paginate @movies %></p>
  </div>
<div class="button paginate">
  <%= link_to 'New Movie', new_movie_path %>
</div>
